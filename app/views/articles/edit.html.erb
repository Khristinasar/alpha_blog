<h1>Edit existing article</h1>

<% if @article.errors.any? %>
  <h3>The following errors prevented the article from getting created</h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>  <!-- |f| can be anything -->
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :desciption %><br/>
    <%= f.text_area :description %> <!-- text_area becuase we need a bigger box for desc -->
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %> 

<%= link_to "Back to articles", articles_path %>