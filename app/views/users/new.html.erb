<h3>Signup for Alpha Blog</h3>

<%= render 'shared/errors', obj: @user %>  <!-- to render errors template from views/shared folder !-->

<div class="row">
  <div class="col-md-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>  <!-- without class: "form-horizontal" form won't work, we have to add it this way ; |f| can be anything -->
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username %><br/>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>  
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %><br/>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %> 
        </div>
      </div>  
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %><br/>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %> 
        </div>
      </div>  
      <div class="form-group">
        <div class="col-sm-12">
          <%= f.submit 'Sign up', class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    
    <%= link_to "Back to articles", articles_path %>
  </div>
</div>