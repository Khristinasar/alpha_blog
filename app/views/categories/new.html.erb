<h2>Create new category</h2>

<%= render 'shared/errors', obj: @category %>  <!-- to render errors template from views/shared folder !-->

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>  <!-- without class: "form-horizontal" form won't work, we have to add it this way ; |f| can be anything -->
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :name %><br/>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
    </div>
  </div>  
  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>
<% end %>

<%= link_to "Back to articles", articles_path %>
